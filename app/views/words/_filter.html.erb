<div class="col-md-6 col-md-offset-3">
	<div class="form-group">
	<%= form_tag(words_path, method: :get) do %><b>Category</b>
		<%= select_tag("categorie_id",
				options_from_collection_for_select(@categories, "id","name", 
	params[:categorie_id]), prompt: "Select Category....", class: "form-control") %>
	
	  <% ["all", "learned", "not learned"].each do |value| %>
	  	<div class="radio">
	  		<div class="col-md-1">
				<%= radio_button_tag("filter_word", value, @filter == value) %> 
			</div>	
		  	<div class="col-md-6">
				<%= value %>
			</div> 	  	
	  	</div>
	  <% end %><br>
	  <%= submit_tag "Filter", class: "btn btn-small btn-primary" %>
	  <%= submit_tag "PDF", class: "btn btn-small btn-primary" %>
	<% end %>
	</div>
</div>