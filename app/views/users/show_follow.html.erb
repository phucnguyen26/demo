<% provide(:title, @title) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <br><%= gravatar_for @user %>
      <h1><%= @user.name %></h1>
      <br><span><%= link_to "View my profile", @user %></span>
   
    </section>
    <br><section class="stats">
      <%= render 'shared/stats' %>
     
    </section>
  </aside>
  <div class="col-md-8">
    <h3><%= @title %></h3>
    <% if @users.any? %>
      <ul class="users follow">
        <%= render @user %>
      </ul>
      <%= will_paginate %>
    <% end %>
  </div>
</div>